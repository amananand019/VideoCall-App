<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginVertical="15dp"
    android:layout_marginHorizontal="15dp">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_test_account"/>
        <TextView
            android:id="@+id/name_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="user name"
            android:textSize="20sp"
            android:layout_toEndOf="@id/image_notification"
            android:layout_marginTop="25dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept Request"
            android:background="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_toEndOf="@id/image_notification"
            android:layout_below="@id/name_notification"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/request_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Request"
            android:background="@android:color/holo_red_light"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_toEndOf="@id/image_notification"
            android:layout_below="@id/request_accept_btn"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>