<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_test_account"/>

    <EditText
        android:id="@+id/username_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_edit_profile"
        android:layout_below="@id/settings_profile_image"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/bio_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_edit_bio"
        android:layout_below="@id/username_settings"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/white"
        android:hint="Bio"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:drawablePadding="20dp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_save_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_below="@id/bio_settings"
        android:textSize="25dp"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/white"/>

</RelativeLayout>